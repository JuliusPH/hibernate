<hibernate-mapping>
  <class name="com.exist.model.Person" table="Person">
    <meta attribute="class-description">
      This class contains the person details.
    </meta>
    <id name="id" type="long" column="id">
      <generator class="identity"/>
    </id>
    <property name="firstName" column="first_name" type="string"/>
    <property name="middleName" column="middle_name" type="string"/>
    <property name="lastName" column="last_name" type="string"/>
    <many-to-one name="address" column="address_id" unique="true" class="com.exist.model.Address" not-null="true" cascade="all"/>
    <property name="birthday" column="birthday" type="date"/>
    <property name="gwa" column="gwa" type="float"/>
    <property name="dateHired" column="date_hired" type="date"/>
    <property name="employed" column="is_employed" type="boolean"/>
	<set name="contacts" cascade="all">
		<key column="person_id"/>
		<one-to-many class="com.exist.model.Contact"/>
	</set>
    <property name="gender" column="gender">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.exist.model.enums.Gender</param>
        <param name="useNamed">true</param>
      </type>
    </property>
  </class>
</hibernate-mapping>
